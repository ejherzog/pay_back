<div class="text-center p-3">
  <h4 id="notice"><%= notice %></h4>
</div>

<h1 class="text-center p-3">Join A Group</h1>

<div class="row">
  <div class="col-lg-6 offset-lg-3">
    <table class="table table-hover">
      <tbody>
        <% @groups.each do |group| %>
          <tr>
            <td><%= link_to group.name, group %></td>
            <% if member?(group) %>
              <td class="text-center">Already A Member</td>
            <% else %>
              <td class="text-center"><%= link_to 'Join Group', { controller: 'groups', id: group.id, action: 'add_user'}, method: :post%></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
