<div class="text-center p-3">
  <h4 id="notice"><%= notice %></h4>
</div>

<h1 class="text-center p-3">Add A User To <%= @group.name %></h1>

<div class="row">
  <div class="col-lg-6 offset-lg-3">
    <table class="table table-hover">
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.full_name, user %></td>
            <td><%= user.email %></td>
            <% if user_is_member?(user, @group) %>
              <td class="text-center">Already A Member</td>
            <% else %>
              <td class="text-center"><%= link_to 'Add To Group', { controller: 'groups', id: @group.id, user_id: user.id, action: 'add_user'}, method: :post%></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

